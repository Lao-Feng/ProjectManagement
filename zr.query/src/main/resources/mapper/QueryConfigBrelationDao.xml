<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="zr.zrpower.dao.QueryConfigBrelationDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="zr.zrpower.domain.QueryConfigBrelation" id="queryConfigBrelationMap">
        <result property="id" column="ID"/>
        <result property="fid" column="FID"/>
        <result property="bid" column="BID"/>
    </resultMap>
    
 <sql id="Base_Column_List" >
`ID`, `FID`, `BID`
  </sql>
  
	<select id="queryObject" resultType="zr.zrpower.domain.QueryConfigBrelation">
		select
		 <include refid="Base_Column_List" />
		 from query_config_brelation where ID = #{value}
	</select>
	
	<select id="getMaxNo" resultType="String">
		select max(id) as max_no from query_config_brelation
	</select>

	<select id="queryList" resultType="zr.zrpower.domain.QueryConfigBrelation">
		select 
		<include refid="Base_Column_List" />
		from query_config_brelation
		<where>
            <if test="fid != null and fid != ''">
                and `fid` = #{fid}
            </if>
            <if test="bid != null and bid != ''">
                and `bid` = #{bid}
            </if>
        </where>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by ID desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from query_config_brelation 
	</select>
	 
	<insert id="save" parameterType="zr.zrpower.domain.QueryConfigBrelation">
		insert into query_config_brelation
		(
			`ID`, 
			`FID`, 
			`BID`
		)
		values
		(
			#{id}, 
			#{fid}, 
			#{bid}
		)
	</insert>
	 
	<update id="update" parameterType="zr.zrpower.domain.QueryConfigBrelation">
		update query_config_brelation 
		<set>
			<if test="fid != null">`FID` = #{fid}, </if>
			<if test="bid != null">`BID` = #{bid}</if>
		</set>
		where ID = #{id}
	</update>
	
	<delete id="delete">
		delete from query_config_brelation where ID = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from query_config_brelation where ID in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>