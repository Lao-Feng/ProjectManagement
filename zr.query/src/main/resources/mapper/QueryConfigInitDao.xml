<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="zr.zrpower.dao.QueryConfigInitDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="zr.zrpower.domain.QueryConfigInit" id="queryConfigInitMap">
        <result property="id" column="ID"/>
        <result property="fid" column="FID"/>
        <result property="qleft" column="QLEFT"/>
        <result property="field" column="FIELD"/>
        <result property="symbol" column="SYMBOL"/>
        <result property="wherevalue" column="WHEREVALUE"/>
        <result property="qright" column="QRIGHT"/>
        <result property="logic" column="LOGIC"/>
    </resultMap>
    
 <sql id="Base_Column_List" >
`ID`, `FID`, `QLEFT`, `FIELD`, `SYMBOL`, `WHEREVALUE`, `QRIGHT`, `LOGIC`
  </sql>
  
	<select id="queryObject" resultType="zr.zrpower.domain.QueryConfigInit">
		select
		 <include refid="Base_Column_List" />
		 from query_config_init where ID = #{value}
	</select>
	
	<select id="getMaxNo" resultType="String">
		select max(id) as max_no from query_config_init
	</select>

	<select id="queryList" resultType="zr.zrpower.domain.QueryConfigInit">
		select 
		<include refid="Base_Column_List" />
		from query_config_init
        <where>
            <if test="fid != null and fid != ''">
                and `fid` = #{fid}
            </if>
        </where>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by ID asc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from query_config_init 
	</select>
	 
	<insert id="save" parameterType="zr.zrpower.domain.QueryConfigInit">
		insert into query_config_init
		(
			`ID`, 
			`FID`, 
			`QLEFT`, 
			`FIELD`, 
			`SYMBOL`, 
			`WHEREVALUE`, 
			`QRIGHT`, 
			`LOGIC`
		)
		values
		(
			#{id}, 
			#{fid}, 
			#{qleft}, 
			#{field}, 
			#{symbol}, 
			#{wherevalue}, 
			#{qright}, 
			#{logic}
		)
	</insert>
	
	<insert id="saveBatchList" parameterType="java.util.List"
		useGeneratedKeys="false">
		insert into query_config_init
		(
			`ID`, 
			`FID`, 
			`QLEFT`, 
			`FIELD`, 
			`SYMBOL`, 
			`WHEREVALUE`, 
			`QRIGHT`, 
			`LOGIC`
		)
		values
		<foreach collection="list" item="item" index="index"
			separator=",">
			(
			#{item.id},
			#{item.fid}, 
			#{item.qleft}, 
			#{item.field}, 
			#{item.symbol}, 
			#{item.wherevalue}, 
			#{item.qright}, 
			#{item.logic}
			)
		</foreach>
	</insert>
	 
	<update id="update" parameterType="zr.zrpower.domain.QueryConfigInit">
		update query_config_init 
		<set>
			<if test="fid != null">`FID` = #{fid}, </if>
			<if test="qleft != null">`QLEFT` = #{qleft}, </if>
			<if test="field != null">`FIELD` = #{field}, </if>
			<if test="symbol != null">`SYMBOL` = #{symbol}, </if>
			<if test="wherevalue != null">`WHEREVALUE` = #{wherevalue}, </if>
			<if test="qright != null">`QRIGHT` = #{qright}, </if>
			<if test="logic != null">`LOGIC` = #{logic}</if>
		</set>
		where ID = #{id}
	</update>
	
	<delete id="delete">
		delete from query_config_init where FID = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from query_config_init where ID in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>